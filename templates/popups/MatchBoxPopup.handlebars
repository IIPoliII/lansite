<div id="MatchBox-Popup" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Crée une animation</h4>
			</div>
			<div class="modal-body">
				<div style="width:100%; display:table">
					<div class="input-group" style="display:table-cell; width:100%">
						Entrez le nom du jeu:
				    	<input type="text" class="form-control matchpopupgame"/>
					</div><!-- /input-group -->
				</div>
				<br>
				<div style="width:100%; display:table">
					<div class="input-group" style="display:table-cell; width:100%">
						Nombre minimum de joueurs:
				    	<input type="number" class="form-control matchpopupmin" placeholder="Doit être 2 ou plus"/>
					</div><!-- /input-group -->
				</div>
				<br>
				<div style="width:100%; display:table">
					<div class="input-group" style="display:table-cell; width:100%">
						Nombre maximum de joueurs : (entre 0 pour pas de limite)
				    	<input type="number" class="form-control matchpopupmax" placeholder="Doit être plus grand que le minimum ou 0"/>
					</div><!-- /input-group -->
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Annulé</button>
				<button id="MatchBox-Popup-submit" type="button" class="btn btn-primary" data-dismiss="modal">Crée</button>
			</div>
		</div>
	</div>
</div>
