<div id="TextBox-Popup" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Post a message</h4>
			</div>
			<div class="modal-body">
				<div style="width:100%; display:table">
					<div class="input-group" style="display:table-cell; width:100%">
						Enter your message:
				    	<input type="text" class="form-control reqmessage" placeholder="e.g. Pizza has arrived!"/>
					</div><!-- /input-group -->
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button id="TextBox-Popup-submit" type="button" class="btn btn-primary" data-dismiss="modal">Request</button>
			</div>
		</div>
	</div>
</div>