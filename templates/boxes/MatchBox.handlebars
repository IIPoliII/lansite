<template id="MatchBox">
	<div class="panel panel-primary">
		<div class="panel-heading">
		    <h3 class="panel-title">Match Finder</h3>
		</div>
		<div class="panel-body">
			<p class="matchboxempty" style="text-align:center">No one is looking for players.</p>
			<div class="matches">

			</div><br/>
			<button class="btn btn-primary pull-right matchadd" id="MatchBoxButtonHide" type="button" data-toggle="modal" data-target="#MatchBox-Popup">+Find players</button><br/>
		</div>
	</div>
</template>

<template id="MatchBox-match">
	<div class="input-group match">
		<span class="input-group-addon matchstring" style="width: 100%; text-align: left;">
				error
	    </span>
	    <span class="input-group-addon">
	    	<button class="btn btn-default dropdown-toggle matchcounter" type="button" id="matchdropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">X
			</button>
			<ul class="dropdown-menu matchusers" aria-labelledby="matchdropdown">
			</ul>
	    	<button class="btn btn-primary matchaccept" type="button">I'll play!</button>
	    	<button class="btn btn-danger matchcancel" type="button">Dropout</button>
	    	<button class="btn btn-secondary matchfull" type="button" disabled hidden>Full</button>
	    </span>
    </div>
</template>

<script src="js/boxes/MatchBox.js"></script>
