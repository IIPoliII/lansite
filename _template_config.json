//To use this config file, you must remove all comments and rename it to config.json
{
    //Web Address: url server will append to redirects
    "url": "http://localhost",

    //Port: port in which the server will run off.
    "port": 3000,

    //Developer Mode: enables features that may be insecure to run in a production situation
    "developerMode": false,

    //Steam API Key: Grab one for yourself here: http://steamcommunity.com/dev/apikey
    "steamAPIKey": "YOUR API KEY HERE",

    //Auto OP First User: Make the first user that logs into Lansite the admin
    "autoOPFirstUser": true

}
